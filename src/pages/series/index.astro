---
/**
 * Page Series - Liste de toutes les séries avec leurs articles
 *
 * Affiche toutes les séries (collections d'articles) disponibles sur Hashnode.
 * Chaque série affiche directement la liste de ses articles.
 */

import Link from "@/components/Link.astro";
import PageHead from "@/components/PageHead.astro";
import { buttonVariants } from "@/components/ui/button";
import Layout from "@/layouts/Layout.astro";
import { Icon } from "astro-icon/components";

// Import de la fonction API Hashnode
import { getAllSeries } from "@/lib/hashnode/api";
import type { Series } from "@/lib/hashnode/types";

// Récupération de toutes les séries
let allSeries: Series[] = [];

try {
	allSeries = await getAllSeries(20); // Limite API: 20 max
} catch (error) {
	console.error("Erreur lors de la récupération des séries:", error);
}

// Titre et description de la page
const pageTitle = "Series";
const pageDescription = "Collections of related articles organized by topic.";

// ISR: Cache 60s sur Vercel, stale-while-revalidate 5min
Astro.response.headers.set(
	"Cache-Control",
	"s-maxage=60, stale-while-revalidate=300",
);
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title={pageTitle} description={pageDescription} />

  <!-- Header -->
  <section class="py-8 border-b border-border">
    <h1 class="text-3xl font-bold mb-2">{pageTitle}</h1>
    <p class="text-muted-foreground">
      {pageDescription}
    </p>
  </section>

  <!-- Liste des séries avec articles -->
  {allSeries.length > 0 ? (
    <section class="py-12 space-y-16">
      {allSeries.map((series) => {
        const posts = series.posts?.edges?.map(edge => edge.node) ?? []

        return (
          <article>
            <!-- En-tête de la série: Titre à gauche, Description à droite -->
            <div class="flex flex-col md:flex-row md:gap-12 mb-8">
              <!-- Titre + Badge (gauche) -->
              <div class="md:w-1/3 shrink-0 mb-4 md:mb-0">
                <!-- Badge: Parts count + Status -->
                <div class="flex items-center gap-2 mb-3 text-sm font-semibold uppercase tracking-wider">
                  <Icon name="lucide:layers" class="size-4 text-muted-foreground" />
                  <span class="text-muted-foreground">{posts.length} Parts</span>
                  <span class="text-muted-foreground">•</span>
                  <span class="text-primary">In Progress</span>
                </div>

                <!-- Titre -->
                <h2 class="text-3xl md:text-4xl font-serif font-bold">
                  <Link href={`/series/${series.slug}`} class="hover:text-primary transition-colors">
                    {series.name}
                  </Link>
                </h2>
              </div>

              <!-- Description (droite) -->
              {series.description?.text && (
                <p class="text-muted-foreground text-lg leading-relaxed">
                  {series.description.text}
                </p>
              )}
            </div>

            <!-- Séparateur -->
            <div class="border-t border-border" />

            <!-- Liste des articles -->
            {posts.length > 0 && (
              <div class="divide-y divide-border">
                {posts.map((post, index) => {
                  const partNumber = String(index + 1).padStart(2, '0')

                  return (
                    <Link
                      href={`/articles/${post.slug}`}
                      class="group flex items-start gap-6 py-6 transition-colors"
                    >
                      <!-- Numéro avec ligne -->
                      <div class="flex items-center gap-3 shrink-0 pt-1">
                        <span class="text-sm font-medium text-muted-foreground">
                          {partNumber}
                        </span>
                        <div class="w-8 h-px bg-border" />
                      </div>

                      <!-- Contenu central: Titre + Brief -->
                      <div class="flex-1 min-w-0">
                        <h3 class="text-xl font-semibold group-hover:text-primary transition-colors mb-1">
                          {post.title}
                        </h3>
                        {post.brief && (
                          <p class="text-muted-foreground line-clamp-1">
                            {post.brief}
                          </p>
                        )}
                      </div>

                      <!-- Temps de lecture + flèche -->
                      <div class="flex items-center gap-3 shrink-0 pt-1">
                        {post.readTimeInMinutes && (
                          <div class="flex items-center gap-1.5 text-sm text-muted-foreground">
                            <Icon name="lucide:clock" class="size-4" />
                            <span>{post.readTimeInMinutes} min read</span>
                          </div>
                        )}
                        <Icon
                          name="lucide:arrow-right"
                          class="size-4 text-muted-foreground opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all"
                        />
                      </div>
                    </Link>
                  )
                })}
              </div>
            )}
          </article>
        )
      })}
    </section>
  ) : (
    <!-- Message si pas de séries -->
    <section class="py-12 text-center">
      <Icon name="lucide:layers" class="size-12 text-muted-foreground/50 mx-auto mb-4" />
      <h2 class="text-lg font-semibold mb-2">Pas encore de séries</h2>
      <p class="text-muted-foreground mb-4">
        Les séries apparaitront ici une fois créées sur Hashnode.
      </p>
      <Link
        href="https://hashnode.com"
        class={buttonVariants({ variant: 'outline' })}
        external
      >
        Créer une série sur Hashnode
        <Icon name="lucide:external-link" class="size-4 ml-2" />
      </Link>
    </section>
  )}
</Layout>
