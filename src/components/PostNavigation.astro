---
/**
 * PostNavigation - Navigation Previous/Next Post
 *
 * Affiche les boutons de navigation vers l'article précédent et suivant.
 * Adapté pour les données Hashnode (slug/title au lieu de id/data.title).
 */
import Link from "@/components/Link.astro";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";

type Post = { title: string; slug: string } | null | undefined;

type Props = {
	newerPost?: Post;
	olderPost?: Post;
};

const { newerPost, olderPost } = Astro.props;
---

<nav class="grid grid-cols-1 gap-4 sm:grid-cols-2">
  <Link
    href={olderPost ? `/articles/${olderPost.slug}` : '#'}
    class={cn(
      buttonVariants({ variant: 'outline' }),
      'rounded-lg group flex items-center justify-start size-full py-4',
      !olderPost && 'pointer-events-none opacity-50 cursor-not-allowed',
    )}
    aria-disabled={!olderPost}
  >
    <Icon
      name="lucide:arrow-left"
      class="mr-2 size-4 transition-transform group-hover:-translate-x-1"
    />
    <div class="flex flex-col items-start overflow-hidden text-wrap">
      <span class="text-muted-foreground text-left text-xs">
        Previous Post
      </span>
      <span class="w-full text-left text-sm text-balance text-ellipsis">
        {olderPost?.title || "You're at the oldest post!"}
      </span>
    </div>
  </Link>

  <Link
    href={newerPost ? `/articles/${newerPost.slug}` : '#'}
    class={cn(
      buttonVariants({ variant: 'outline' }),
      'rounded-lg group flex items-center justify-end size-full py-4',
      !newerPost && 'pointer-events-none opacity-50 cursor-not-allowed',
    )}
    aria-disabled={!newerPost}
  >
    <div class="flex flex-col items-end overflow-hidden text-wrap">
      <span class="text-muted-foreground text-right text-xs">
        Next Post
      </span>
      <span class="w-full text-right text-sm text-balance text-ellipsis">
        {newerPost?.title || "You're at the newest post!"}
      </span>
    </div>
    <Icon
      name="lucide:arrow-right"
      class="ml-2 size-4 transition-transform group-hover:translate-x-1"
    />
  </Link>
</nav>
